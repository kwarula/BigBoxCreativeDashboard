# ============================================================
# SUPABASE CONFIGURATION
# ============================================================

# Supabase Project URL
# Find this in: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://ggznznkdkkwtmexckizs.supabase.co

# Supabase Anonymous Key (Public API Key)
# Safe to use in client-side code
# Find this in: Supabase Dashboard > Project Settings > API > anon/public
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (KEEP SECRET!)
# Bypasses Row Level Security (RLS)
# Only use server-side, NEVER expose to clients
# Find this in: Supabase Dashboard > Project Settings > API > service_role
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Enable Supabase Real-time for distributed event propagation
ENABLE_REALTIME=true

# Redis Configuration (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro

# System Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ============================================================
# AUTONOMIC ENGINE CONFIGURATION
# ============================================================

# Confidence thresholds for human escalation
CONFIDENCE_THRESHOLD_LOW=0.60
CONFIDENCE_THRESHOLD_MEDIUM=0.75
CONFIDENCE_THRESHOLD_HIGH=0.90

# Maximum in-memory event history size
MAX_EVENT_HISTORY=1000

# CEO attention optimization thresholds
CEO_FINANCIAL_LIMIT=100000
CEO_REPUTATION_KEYWORDS=lawsuit,PR crisis,media,viral,scandal

# ============================================================
# SOP CONFIGURATION
# ============================================================

# SOP directory path
SOP_DIRECTORY=./sops

# SOP evolution - silent timeout hours (default: 72 hours)
SOP_SILENT_TIMEOUT_HOURS=72

# ============================================================
# CHAOS ENGINEERING
# ============================================================

# Enable chaos experiments (disable in production unless intentional)
ENABLE_CHAOS=false

# Chaos default intensity (low, medium, high)
CHAOS_DEFAULT_INTENSITY=low

# Protected event types (never inject chaos into these)
CHAOS_PROTECTED_EVENTS=PAYMENT_RECEIVED,INVOICE_ISSUED,CEO_INTERRUPT_REQUIRED
